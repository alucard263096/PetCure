<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>发布</name>
  <tablename>tb_n_poster</tablename>
  <nolist>0</nolist>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <import>Y</import>
  <fields>
    <field>
      <name>发布类型</name>
      <key>type</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>救助</name>
          <value>0</value>
        </option>
        <option>
          <name>求助</name>
          <value>1</value>
        </option>
      </options>
      <displayinlist>1</displayinlist>
      <search>1</search>
      <notnull>1</notnull>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>救助内容</name>
      <key>needs</key>
      <type>longtext</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>背景图</name>
      <key>photo</key>
      <type>upload</type>
      <uploadmodule>pet</uploadmodule>
      <filetype>image</filetype>
      <notnull>1</notnull>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>位置</name>
      <key>address</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <search>1</search>
      <notnull>1</notnull>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>Lat</name>
      <key>lat</key>
      <type>text</type>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>Lng</name>
      <key>lng</key>
      <type>text</type>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>联系方式</name>
      <key>contact</key>
      <type>text</type>
      <notnull>1</notnull>
      <search>1</search>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>发布中</name>
          <value>A</value>
        </option>
        <option>
          <name>完成</name>
          <value>F</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>发布记录</name>
      <key>recordlist</key>
      <type>grid</type>
      <api>Poster/record.php?action=getgrid&amp;poster_id=</api>
    </field>
    <field>
      <name>发布图片</name>
      <key>photolist</key>
      <type>grid</type>
      <api>Poster/photo.php?action=getgrid&amp;poster_id=</api>
    </field>
    <field>
      <name>线索</name>
      <key>hintlist</key>
      <type>grid</type>
      <api>Poster/hint.php?action=getgrid&amp;poster_id=</api>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>0</search>
      <detail>0</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
  <javascripts>
    <javascript>
      <filename>poster.js</filename>
      <search>1</search>
      <detail>1</detail>
    </javascript>
    <javascript>
    </javascript>
  </javascripts>
</root>